---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import TopLayout from "@layouts/TopLayout.astro";
import BottomLayout from "@layouts/BottomLayout.astro";
import Blog from "@components/Blog";
import { BLOG } from "@consts";
import DownloadCV from "@components/DownloadCV";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const tags = [...new Set(posts.flatMap((post) => post.data.tags))].sort(
  (a, b) => a.localeCompare(b)
);
---

<PageLayout title={BLOG.SHORT_TITLE} description={BLOG.DESCRIPTION}>
  <TopLayout>
    <div class="animate page-heading flex w-full justify-between items-center">
      <h1 class="text-xl font-semibold">{BLOG.TITLE}</h1>
      <DownloadCV client:load />
    </div>
  </TopLayout>
  <BottomLayout>
    <div class="animate">
      <Blog client:load tags={tags} data={posts} />
    </div>
  </BottomLayout>
</PageLayout>
